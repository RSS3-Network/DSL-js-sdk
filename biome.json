{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"ignore": [".turbo/**", ".next/**", "dist/**"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"useKeyWithClickEvents": "off"
			},
			"suspicious": {
				"noFallthroughSwitchClause": "off",
				"useGetterReturn": "off"
			}
		}
	}
}
